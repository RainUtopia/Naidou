<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <org.kymjs.kjframe.widget.RoundImageView
            android:id="@+id/item_liaode_detail_portrait"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/portrait1" />

        <View
            android:layout_width="2dp"
            android:layout_height="65dp"
            android:background="@color/topic_red" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#15333333"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_liaode_detail_author"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Katherine"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/item_liaode_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="一小时前"
                    android:textColor="#99666666"
                    android:textSize="11sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/item_liaode_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="嗯哼，怎么回事呢，你是怎么搞的嘛"
                android:textColor="#333333"
                android:textSize="14sp" />


            <LinearLayout
                android:id="@+id/item_liaode_detail_reply"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:padding="3dp"
                    android:layout_height="25dp"
                    android:src="@drawable/selector_common_reply" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="回复"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />
    </LinearLayout>

</LinearLayout>