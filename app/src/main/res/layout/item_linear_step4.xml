<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_step4"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_linear_step4_step"
            android:layout_width="35dp"
            android:layout_height="170dp"
            android:background="@drawable/shape_publish_step4_leftcorner"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="10dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/item_linear_step4_img"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="#50333333"
            android:src="@drawable/selector_publish_addimg" />

        <TextView
            android:id="@+id/item_linear_step4_describe"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_publish_step4_rightcorner"
            android:padding="5dp"
            android:gravity="center"
            android:text="点击添加描述"
            android:textColor="@color/light_black"
            android:textSize="11sp" />

    </LinearLayout>
</LinearLayout>