<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/step1_img_menu"
            style="@style/titlebar_img"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:src="@drawable/selector_title_cancel" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/step1_parent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/selector_publish_parent" />

        <ImageView
            android:id="@+id/step1_child"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/selector_publish_child"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="选择你的菜谱对象"
            android:textColor="#3d3d3d"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>