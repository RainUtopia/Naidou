<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/publish_titlebar"
        android:id="@+id/include" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/publish_add_step_recyclerview"
        android:layout_height="match_parent"
        android:layout_below="@+id/include"
        android:layout_above="@+id/publish_add_step_more_l"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/publish_add_step_more_l"
        android:layout_alignParentBottom="true"
        android:layout_width="150dp"
        android:padding="5dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="24dp"
            android:src="@drawable/selector_publish_more_step"
            android:id="@+id/publish_add_step_more"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_height="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:text="步骤增加"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/publish_add_step_more"
            />
    </RelativeLayout>


</RelativeLayout>