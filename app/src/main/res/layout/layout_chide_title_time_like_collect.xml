<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/chide_info_layout"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_list_cookbook_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="17sp"
        android:layout_centerVertical="true"
        android:paddingBottom="3dp"
        android:text="小鸡炖蘑菇"
        android:textColor="#ffffff" />

    <TextView
        android:layout_toRightOf="@+id/item_list_cookbook_title"
        android:id="@+id/item_list_cookbook_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="1小时前"
        android:layout_alignBottom="@+id/item_list_cookbook_title"
        android:paddingBottom="4dp"
        android:textColor="#f5f5f5"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/item_list_cookbook_islike"
        android:layout_width="30dp"
        android:padding="6dp"
        android:layout_toLeftOf="@+id/item_list_cookbook_likes"
        android:layout_marginLeft="20dp"
        android:layout_height="30dp"
        android:src="@drawable/selector_chide_like"
        />

    <TextView
        android:id="@+id/item_list_cookbook_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_list_cookbook_iscollect"
        android:text="123"
        android:layout_centerVertical="true"
        android:layout_marginBottom="3dp"
        android:textSize="13sp"
        android:textColor="#ffffff"
        />

    <ImageView
        android:id="@+id/item_list_cookbook_iscollect"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/item_list_cookbook_collects"
        android:padding="6dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/selector_chide_collect" />

    <TextView
        android:id="@+id/item_list_cookbook_collects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="123"
        android:layout_alignParentRight="true"
        android:textSize="13sp"
        android:textColor="#ffffff"
        />

</RelativeLayout>