<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
        android:id="@+id/recommend_chide_recyler_pager"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:singlePageFling="true"
        app:triggerOffset="0.1"/>

    <com.itspeed.naidou.app.view.AdapterIndicator
        android:id="@+id/recommend_chide_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/recommend_chide_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/recommend_chide_img"
        android:src="@mipmap/logo_256"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_height="40dp" />
</RelativeLayout>