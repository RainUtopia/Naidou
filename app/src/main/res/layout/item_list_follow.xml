<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/shape_item_mycollect"
    android:layout_height="70dp">


    <org.kymjs.kjframe.widget.RoundImageView
        android:src="@mipmap/portrait"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/item_list_follow_portrait"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/item_list_follow_name"
            android:text="Jafir"
            android:textSize="15sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/item_list_follow_count"
            android:layout_width="match_parent"
            android:text="22个菜谱"
            android:textSize="11sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:id="@+id/item_list_follow_isfollow"
        android:layout_marginRight="10dp"
        android:src="@mipmap/myfollow_follow"
        android:layout_height="35dp" />


</LinearLayout>